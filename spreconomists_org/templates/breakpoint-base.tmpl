  name="breakpoint" 
  data="small-tablet" 
  media="(min-width: 480px) and (max-width: 600px)" 
/><!-- breakpoint-small-tablet -->
<meta 
  name="breakpoint" 
  data="tablet" 
  media="(min-width: 600px) and (max-width: 1024px)" 
/><!-- breakpoint-tablet -->
